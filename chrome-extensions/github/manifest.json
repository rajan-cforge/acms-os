{
  "manifest_version": 3,
  "name": "ACMS GitHub Capture",
  "version": "1.0.0",
  "description": "Automatically capture GitHub issues, PRs, and discussions to ACMS with privacy controls",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*",
    "http://localhost:40080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
